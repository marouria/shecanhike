      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "meta_title": {
      "type": "string"
    },
    "meta_description": {
      "type": "string"
    },
    "published_date": {
      "type": "date"
    },
    "excerpt": {
      "type": "text"
    },
    "content": {
      "type": "richtext"
    }
  }
}
